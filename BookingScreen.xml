<!-- BookingScreen.fxml -->
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.BookingController" style="-fx-background-color: #e6f0f8;">
    <center>
        <VBox spacing="15" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;" maxWidth="400" BorderPane.alignment="CENTER">
            <Label text="BOOK AT IIUM CLINIC" style="-fx-font-size: 18px; -fx-text-fill: #336699;" />
            
            <Label text="Choose Doctor" />
            <ComboBox fx:id="doctorComboBox" prefWidth="200"/>

            <Label text="Choose Date" />
            <DatePicker fx:id="datePicker" prefWidth="200"/>

            <Label text="Time" />
            <TextField fx:id="timeField" promptText="e.g. 10:30 AM" prefWidth="200"/>

            <Label text="Room" />
            <TextField fx:id="roomField" promptText="e.g. Room 1" prefWidth="200"/>

            <Button text="Book Appointment" onAction="#handleBooking" style="-fx-background-color: #4da6ff; -fx-text-fill: white;" />

            <Label fx:id="statusLabel" textFill="green"/>
        </VBox>
    </center>
</BorderPane>
