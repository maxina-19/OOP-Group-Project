<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.PaymentController" style="-fx-background-color: #e6f0f8;">
    <center>
        <VBox spacing="15" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;" maxWidth="400" BorderPane.alignment="CENTER">
            <Label text="PAYMENT DETAILS" style="-fx-font-size: 18px; -fx-text-fill: #336699;" />

            <Label text="Amount (RM):" />
            <TextField fx:id="amountField" prefWidth="200"/>

            <Label text="Payment Method:" />
            <ComboBox fx:id="methodComboBox" prefWidth="200"/>

            <Button text="Confirm Payment" onAction="#handlePayment" style="-fx-background-color: #4da6ff; -fx-text-fill: white;" />

            <Label fx:id="paymentStatusLabel" textFill="green" />
        </VBox>
    </center>
</BorderPane>
